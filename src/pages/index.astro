---
import Layout from "../layouts/Layout.astro";
import lineSvg from "../assets/line.svg";
import spanishIcon from "../assets/spanish.svg";
import englishIcon from "../assets/english.svg";
import Button from "../components/Button.astro";
---

<Layout>
  <header class="w-full flex flex-row justify-center items-center pt-6 px-5">
    <div
      class="max-w-screen-xl w-full flex flex-row justify-between gap-4 items-center py-4"
    >
      <div class="max-w-[250px] max-h-[30px]">
        <img
          src="./icon-landing-page.png"
          alt="Icon Landing Page"
          class="w-full h-full"
        />
      </div>
      <nav class="flex flex-row gap-8">
        <ul
          class="hidden md:flex md:flex-row md:justify-between md:items-center md:gap-4"
        >
          <li class="cursor-pointer hover:font-bold">Experiencia</li>
          <li class="cursor-pointer hover:font-bold">Proyectos</li>
          <li class="cursor-pointer hover:font-bold">Servicios</li>
          <li class="cursor-pointer hover:font-bold">Contacto</li>
        </ul>
        <ul class="flex flex-row justify-between items-center gap-4">
          <li class="cursor-pointer max-w-[25px]">
            <img src={spanishIcon.src} alt="Spanish Icon" />
          </li>
          <li class="cursor-pointer max-w-[25px]">
            <img src={englishIcon.src} alt="English Icon" />
          </li>
        </ul>
      </nav>
    </div>
  </header>
  <main class="flex justify-center items-center">
    <section
      class="max-w-screen-xl px-5 w-full flex flex-col justify-center items-center gap-8 my-8 bg-[url('/patterndesign.svg')] bg-no-repeat bg-center bg-cover"
    >
      <div class="w-28 md:w-36 h-28 md:h-36">
        <img
          src="./profile.png"
          alt="Sebastian Urdanegui Image"
          class="w-full h-full"
        />
      </div>
      <div class="flex flex-col justify-center items-center">
        <h1
          class="text-2xl sm:text-3xl md:text-4xl text-center font-medium text-balance"
        >
          Hola, soy Sebas Urdanegui
        </h1>
        <div class="w-full flex justify-end px-10 sm:p-0">
          <img src={lineSvg.src} alt="Line SVG" />
        </div>
      </div>
      <p
        class="text-3xl sm:text-4xl md:text-5xl text-center font-medium md:px-20 xl:px-52"
      >
        Transformando <span class="bg-primary px-2 rounded-xl"
          >ideas en soluciones</span
        > digitales con código, datos y automatización.
      </p>
      <p
        class="text-txt-custom-gray text-base sm:text-lg text-center md:px-40 xl:px-80"
      >
        <b>Full-stack Developer</b> | <b>Data Analyst & Scientist</b><br />
        Soy especialista en desarrollo web, aplicaciones móviles nativas, automatización
        de procesos, análisis de datos y modelos de ML.
      </p>
      <Button title="Conóceme" />
    </section>
  </main>
</Layout>
