---
import skCSS from "@svg/skCSS.svg";
import skExpo from "@svg/skExpo.svg";
import skGit from "@svg/skGit.svg";
import skHTML from "@svg/skHTML.svg";
import skJavaScript from "@svg/skJavaScript.svg";
import skJupyter from "@svg/skJupyter.svg";
import skLooker from "@svg/skLooker.svg";
import skMicrosoft from "@svg/skMicrosoft.svg";
import skPowerBi from "@svg/skPowerBi.svg";
import skPython from "@svg/skPython.svg";
import skR from "@svg/skR.svg";
import skReact from "@svg/skReact.svg";
import skSQL from "@svg/skSQL.svg";
import skTableau from "@svg/skTableau.svg";
import skTailwind from "@svg/skTailwind.svg";
import skTypescript from "@svg/skTypescript.svg";
---

<div class="list">
  <div class="item-list item-1" style="--position: 1">
    <img src={skCSS.src} alt="CSS Logo" />
  </div>
  <div class="item-list item-2" style="--position: 2">
    <img src={skExpo.src} alt="Expo Logo" />
  </div>
  <div class="item-list item-3" style="--position: 3">
    <img src={skGit.src} alt="Git Logo" />
  </div>
  <div class="item-list item-4" style="--position: 4">
    <img src={skHTML.src} alt="HTML Logo" />
  </div>
  <div class="item-list item-5" style="--position: 5">
    <img src={skJavaScript.src} alt="JavaScript Logo" />
  </div>
  <div class="item-list item-6" style="--position: 6">
    <img src={skJupyter.src} alt="Jupyter Logo" />
  </div>
  <div class="item-list item-7" style="--position: 7">
    <img src={skLooker.src} alt="Looker Logo" />
  </div>
  <div class="item-list item-8" style="--position: 8">
    <img src={skMicrosoft.src} alt="Microsoft Logo" />
  </div>
  <div class="item-list item-9" style="--position: 9">
    <img src={skPowerBi.src} alt="PowerBi Logo" />
  </div>
  <div class="item-list item-10" style="--position: 10">
    <img src={skPython.src} alt="Python Logo" />
  </div>
  <div class="item-list item-11" style="--position: 11">
    <img src={skR.src} alt="R Logo" />
  </div>
  <div class="item-list item-12" style="--position: 12">
    <img src={skReact.src} alt="React Logo" />
  </div>
  <div class="item-list item-13" style="--position: 13">
    <img src={skSQL.src} alt="SQL Logo" />
  </div>
  <div class="item-list item-14" style="--position: 14">
    <img src={skTableau.src} alt="Tableau Logo" />
  </div>
  <div class="item-list item-15" style="--position: 15">
    <img src={skTailwind.src} alt="Tailwind Logo" />
  </div>
  <div class="item-list item-16" style="--position: 16">
    <img src={skTypescript.src} alt="Typescript Logo" />
  </div>
</div>

<style>
  .list {
    width: 90%;
    position: relative;
    height: 70px;
    overflow: hidden;
    mask-image: linear-gradient(
      to right,
      rgba(0, 0, 0, 0),
      rgba(0, 0, 0, 1) 20%,
      rgba(0, 0, 0, 1) 80%,
      rgba(0, 0, 0, 0)
    );
  }
  .list:hover .item-list {
    animation-play-state: paused !important;
  }
  @keyframes scrollLeft {
    to {
      left: -200px;
    }
  }
  .item-list {
    width: 100px;
    height: 70px;
    position: absolute;
    left: max(calc(100px * 16), 100%);
    animation-name: scrollLeft;
    animation-duration: 30s;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
  }
  .item-list img {
    width: 100%;
    height: 100%;
  }
  .item-1 {
    animation-delay: calc(30s / 16 * (16 - 1) * -1);
  }
  .item-2 {
    animation-delay: calc(30s / 16 * (16 - 2) * -1);
  }
  .item-3 {
    animation-delay: calc(30s / 16 * (16 - 3) * -1);
  }
  .item-4 {
    animation-delay: calc(30s / 16 * (16 - 4) * -1);
  }
  .item-5 {
    animation-delay: calc(30s / 16 * (16 - 5) * -1);
  }
  .item-6 {
    animation-delay: calc(30s / 16 * (16 - 6) * -1);
  }
  .item-7 {
    animation-delay: calc(30s / 16 * (16 - 7) * -1);
  }
  .item-8 {
    animation-delay: calc(30s / 16 * (16 - 8) * -1);
  }
  .item-9 {
    animation-delay: calc(30s / 16 * (16 - 9) * -1);
  }
  .item-10 {
    animation-delay: calc(30s / 16 * (16 - 10) * -1);
  }
  .item-11 {
    animation-delay: calc(30s / 16 * (16 - 11) * -1);
  }
  .item-12 {
    animation-delay: calc(30s / 16 * (16 - 12) * -1);
  }
  .item-13 {
    animation-delay: calc(30s / 16 * (16 - 13) * -1);
  }
  .item-14 {
    animation-delay: calc(30s / 16 * (16 - 14) * -1);
  }
  .item-15 {
    animation-delay: calc(30s / 16 * (16 - 15) * -1);
  }
  .item-16 {
    animation-delay: calc(30s / 16 * (16 - 16) * -1);
  }
</style>
